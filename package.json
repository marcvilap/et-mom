		"prettier-plugin-astro": "^0.14.1",
		"prettier-plugin-tailwindcss": "^0.6.11"
	},
	"prettier": {
		"arrowParens": "avoid",
		"printWidth": 999,
		"semi": false,
		"singleQuote": true,
		"useTabs": true,
